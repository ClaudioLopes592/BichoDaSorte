<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/fundo_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DuqueDezenaActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="@string/titulo_duq_dezena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/primeiraDezena"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_texto_circular"
        android:paddingTop="25dp"
        android:text="@string/duq_dez_sorteado"
        android:textAlignment="center"
        android:textColor="@color/texto_botao"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnPrimeiraDezena"
        app:layout_constraintStart_toStartOf="@+id/btnPrimeiraDezena"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/segundaDezena"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_texto_circular"
        android:paddingTop="25dp"
        android:text="@string/duq_dez_sorteado"
        android:textAlignment="center"
        android:textColor="@color/texto_botao"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSegundaDezena"
        app:layout_constraintStart_toStartOf="@+id/btnSegundaDezena"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnPrimeiraDezena"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_botao_arredondado"
        android:text="@string/btn_sortear_pdezena"
        android:textColor="@color/texto_botao"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primeiraDezena" />

    <Button
        android:id="@+id/btnSegundaDezena"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_botao_arredondado"
        android:text="@string/btn_sortear_sdezena"
        android:textColor="@color/texto_botao"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segundaDezena" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/primeiroBicho"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPrimeiraDezena" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/segundoBicho"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSegundaDezena" />

    <TextView
        android:id="@+id/textMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeSegundoBicho" />

    <TextView
        android:id="@+id/nomePrimeiroBicho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/primeiroBicho"
        app:layout_constraintStart_toStartOf="@+id/primeiroBicho"
        app:layout_constraintTop_toBottomOf="@+id/primeiroBicho" />

    <TextView
        android:id="@+id/nomeSegundoBicho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/segundoBicho"
        app:layout_constraintStart_toStartOf="@+id/segundoBicho"
        app:layout_constraintTop_toBottomOf="@+id/segundoBicho" />

</androidx.constraintlayout.widget.ConstraintLayout>